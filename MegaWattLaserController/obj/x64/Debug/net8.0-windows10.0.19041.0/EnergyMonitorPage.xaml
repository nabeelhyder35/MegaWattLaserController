<Page x:Class="LaserControllerApp.EnergyMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Grid Margin="20">
        <StackPanel Spacing="15">
            <!-- Energy Output Display -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="ENERGY OUTPUT" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Current Energy:"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" 
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal"
                                    Spacing="5">
                            <TextBlock x:ConnectionId='3' x:Name="EnergyValueText"
                                       Text="0.00"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{ThemeResource SystemAccentColor}"/>
                            <TextBlock Text="mJ"
                                       FontSize="18"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,2"/>
                        </StackPanel>
                    </Grid>

                    <ProgressRing x:ConnectionId='2' x:Name="EnergyUpdateRing"
                                  IsActive="True"
                                  Height="20"
                                  Width="20"
                                  Margin="0,10,0,0"
                                  HorizontalAlignment="Center"
                                  Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- Status Information -->
            <TextBlock Text="This display shows the current energy output measured from the laser. This is a read-only value for monitoring purposes."
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>

