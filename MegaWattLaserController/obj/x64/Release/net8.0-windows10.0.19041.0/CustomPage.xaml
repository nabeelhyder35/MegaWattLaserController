<Page x:Class="LaserControllerApp.CustomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <StackPanel>
            <TextBox x:ConnectionId='2' x:Name="CommandTextBox" PlaceholderText="Enter custom command" Width="300" Margin="0,0,0,10" />
            <Button x:ConnectionId='3' Content="Send Command"                           />
            <TextBlock Text="Command Log:" FontSize="14" Margin="0,10,0,0" />
            <ListView x:ConnectionId='4' x:Name="LogListView" Height="200" />
        </StackPanel>
    </Grid>
</Page>

