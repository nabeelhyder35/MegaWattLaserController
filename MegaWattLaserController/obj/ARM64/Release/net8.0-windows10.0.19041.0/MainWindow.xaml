<Window x:ConnectionId='1'
    x:Class="LaserControllerApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="KALD-20-10 Laser Controller">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
            <!-- Connection Status Indicator -->
            <Ellipse x:ConnectionId='5' x:Name="ConnectionStatusEllipse" 
                     Width="12" 
                     Height="12" 
                     Fill="Red" 
                     Margin="0,0,10,0"
                     ToolTipService.ToolTip="Connection status"/>

            <!-- Port Selection -->
            <ComboBox x:ConnectionId='6' x:Name="PortComboBox" 
                                                           
                      PlaceholderText="Select Port" 
                      Width="150"
                      ToolTipService.ToolTip="Available serial ports"/>

            <!-- Baud Rate Selection -->
            <ComboBox x:ConnectionId='7' x:Name="BaudRateComboBox"
                                                      
                      SelectedIndex="0"
                      Width="100"
                      Margin="10,0,0,0"
                                                                          
                      ToolTipService.ToolTip="Communication speed"/>

            <!-- Connection Controls -->
            <Button x:ConnectionId='8' x:Name="ConnectButton" 
                    Content="Connect" 
                                          
                    ToolTipService.ToolTip="Connect to selected port"/>

            <Button x:ConnectionId='9' x:Name="DisconnectButton" 
                    Content="Disconnect" 
                                             
                    IsEnabled="False"
                    ToolTipService.ToolTip="Disconnect from port"/>

            <Button x:ConnectionId='10' x:Name="RefreshPortsButton" 
                    Content="Refresh Ports" 
                                               
                    ToolTipService.ToolTip="Refresh available serial ports"/>
        </StackPanel>

        <!-- Main Navigation -->
        <NavigationView x:ConnectionId='2' x:Name="NavigationViewControl" 
                        Grid.Row="1" 
                        PaneDisplayMode="Left" 
                        IsBackButtonVisible="Collapsed"
                                                                                 
                        IsSettingsVisible="False"
                        PaneTitle="Laser Control">

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Shutter" Tag="ShutterPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE72C;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Energy/Voltage" Tag="EnergyPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE945;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Pulse Settings" Tag="PulsePage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE121;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Interlock Status" Tag="InterlockPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE81C;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Custom Commands" Tag="CustomCommandsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE756;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!-- Content Frame -->
            <Frame x:ConnectionId='4' x:Name="ContentFrame" 
                                                                   />
        </NavigationView>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{ThemeResource SystemControlBackgroundAltHighBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <TextBlock x:ConnectionId='3' x:Name="StatusTextBlock" 
                           Text="Disconnected" 
                           VerticalAlignment="Center"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

