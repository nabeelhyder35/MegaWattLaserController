<Page x:Class="LaserControllerApp.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Serial Port Settings" FontSize="18" Margin="0,0,0,10" />
            <ComboBox x:Name="PortComboBox" Width="200" Margin="0,0,0,10" SelectionChanged="PortComboBox_SelectionChanged" />
            <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" Margin="0,0,0,10" />
            <Button x:Name="DisconnectButton" Content="Disconnect" Click="DisconnectButton_Click" />
            <TextBlock x:Name="ConnectionStatusText" FontSize="14" />
        </StackPanel>
    </Grid>
</Page>